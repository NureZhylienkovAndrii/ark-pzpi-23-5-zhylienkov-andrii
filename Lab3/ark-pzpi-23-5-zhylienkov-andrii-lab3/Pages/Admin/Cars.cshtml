@page
@model AutoRent.Pages.Admin.CarsModel
@{
    ViewData["Title"] = "Управління автомобілями";
}

<h2>Управління автомобілями</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Марка</th>
            <th>Модель</th>
            <th>Рік</th>
            <th>Ціна/день</th>
            <th>Статус</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.Cars)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Brand</td>
                <td>@c.Model</td>
                <td>@c.Year</td>
                <td>@c.PricePerDay.ToString("0.00")</td>
                <td>@c.Status?.Name</td>
                <td>
                    <!-- Форма зміни статусу -->
                    <form method="post" asp-page-handler="ChangeStatus" style="display:inline-block; margin-right:6px;">
                        <input type="hidden" name="CarId" value="@c.Id" />
                        <select name="NewStatusId" class="form-select form-select-sm" style="display:inline-block; width:auto;">
                            <option value="1" selected="@(c.StatusId == 1)">Available</option>
                            <option value="2" selected="@(c.StatusId == 2)">Unavailable</option>
                        </select>
                        <button type="submit" class="btn btn-sm btn-secondary">Змінити</button>
                    </form>

                    <!-- Форма видалення -->
                    <form method="post" asp-page-handler="Delete" style="display:inline-block;">
                        <input type="hidden" name="DeleteId" value="@c.Id" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Видалити авто?');">Видалити</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

