@page
@model AutoRent.Pages.Auth.LoginModel
@{
    Layout = "_Layout";
}

<h2>Login</h2>

<form method="post">
    <div>
        <label>Email:</label>
        <input type="email" asp-for="Input.Email" required />
    </div>

    <div>
        <label>Password:</label>
        <input type="password" asp-for="Input.Password" required />
    </div>

    <button type="submit">Login</button>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p style="color:red">@Model.ErrorMessage</p>
    }
</form>

<p>
    <a asp-page="/Auth/Register">Create an account</a>
</p>

