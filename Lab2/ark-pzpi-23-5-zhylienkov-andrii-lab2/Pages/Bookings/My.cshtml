@page
@model AutoRent.Pages.Bookings.MyModel
@{
    Layout = "_Layout";
}

<h2>Мої бронювання</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p style="color:green">@Model.Message</p>
}

<table class="table">
    <thead>
        <tr>
            <th>Автомобіль</th>
            <th>Період</th>
            <th>Статус</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model.Bookings)
        {
            <tr>
                <td>@b.Car.Brand @b.Car.Model</td>
                <td>@b.StartDate.ToString("dd.MM.yyyy") — @b.EndDate.ToString("dd.MM.yyyy")</td>
                <td>@b.Status</td>
                <td>
                    @if (b.Status == "Active")
                    {
                        <form method="post">
                            <input type="hidden" name="BookingId" value="@b.Id" />
                            <button type="submit">Скасувати</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
