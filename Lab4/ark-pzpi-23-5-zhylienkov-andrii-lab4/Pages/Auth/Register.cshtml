@page
@model AutoRent.Pages.Auth.RegisterModel
@{
    Layout = "_Layout";
}

<h2>Реєстрація нового користувача</h2>

<form method="post">
    <div>
        <label>Повне ім’я:</label>
        <input type="text" asp-for="Input.FullName" required />
    </div>

    <div>
        <label>Email:</label>
        <input type="email" asp-for="Input.Email" required />
    </div>

    <div>
        <label>Пароль:</label>
        <input type="password" asp-for="Input.Password" required />
    </div>

    <div>
        <label>Підтвердження пароля:</label>
        <input type="password" asp-for="Input.ConfirmPassword" required />
    </div>

    <button type="submit">Зареєструватися</button>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p style="color:red">@Model.ErrorMessage</p>
    }
</form>

<p>
    <a asp-page="/Auth/Login">Вже є акаунт? Увійти</a>
</p>
