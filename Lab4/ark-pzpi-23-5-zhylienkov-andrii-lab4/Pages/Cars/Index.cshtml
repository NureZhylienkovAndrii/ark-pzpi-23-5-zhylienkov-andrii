@page
@model AutoRent.Pages.Cars.IndexModel
@{
    Layout = "_Layout";
}

<h2>Доступні автомобілі</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p style="color:green">@Model.Message</p>
}

<table class="table">
    <thead>
        <tr>
            <th>Марка</th>
            <th>Модель</th>
            <th>Рік</th>
            <th>Ціна/день</th>
            <th>Статус</th>
            <th>Бронювання</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            var isAvailable = car.StatusId == 1;

            <tr style="@(isAvailable ? "" : "opacity:0.5")">
                <td>@car.Brand</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.PricePerDay.ToString("0.00")</td>

                <td>
                    @if (isAvailable)
                    {
                        <span style="color:green; font-weight:bold">Available</span>
                    }
                    else
                    {
                        <span style="color:red; font-weight:bold">Unavailable</span>
                    }
                </td>

                <td>
                    @if (isAvailable)
                    {
                        <form method="post">
                            <input type="hidden" name="CarId" value="@car.Id" />
                            <label>Початок: <input type="date" name="StartDate" required /></label>
                            <label>Кінець: <input type="date" name="EndDate" required /></label>
                            <button type="submit">Забронювати</button>
                        </form>
                    }
                    else
                    {
                        <span style="color:gray">Недоступне для бронювання</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

