@page
@model AutoRent.Pages.Admin.BookingsModel

<h2>Управління бронюваннями</h2>

<table class="table">
    <thead>
        <tr>
            <th>Користувач</th>
            <th>Авто</th>
            <th>Дата</th>
            <th>Статус</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model.Bookings)
        {
            <tr>
                <td>@b.User.Email</td>
                <td>@b.Car.Brand @b.Car.Model</td>
                <td>@b.CreatedAt</td>
                <td>@b.Status</td>
                <td>
                    <form method="post" asp-page-handler="Update">
                        <input type="hidden" name="BookingId" value="@b.Id" />

                        <select name="NewStatus" class="form-select">
                            <option value="Pending" selected="@("Pending" == b.Status)">Pending</option>
                            <option value="Approved" selected="@("Approved" == b.Status)">Approved</option>
                            <option value="Cancelled" selected="@("Cancelled" == b.Status)">Cancelled</option>
                        </select>

                        <button class="btn btn-primary mt-1">Оновити</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
